<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_JTCA_LJJADNG12S_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
        <field
			name="billete"
			type="sql"
			label="COM_JTCA_FILTER_BILLETE_LABEL"
			description="COM_JTCA_FILTER_BILLETE_DESC"
			onchange="this.form.submit();"
			query="SELECT DISTINCT `a`.`BILLETE` AS `value`, `a`.`BILLETE` AS `text`
		            FROM `jt_ljjadng12s` AS `a` 
		            ORDER BY `a`.`BILLETE`"
			key_field="value"
			value_field="text"
		>
            <option value="">COM_JTCA_LJJADNG12S_SELECT_BILLETE</option>
        </field>
        <field
			name="state"
			type="status"
			label="COM_JTCA_FILTER_STATUS_LABEL"
			description="COM_JTCA_FILTER_STATUS_DESC"
			onchange="this.form.submit();"
		>
            <option value="">COM_JTCA_SELECT_STATUS</option>
        </field>
        <field
			name="created_by"
			type="sql"
			label="COM_JTCA_FILTER_CREATED_BY_LABEL"
			description="COM_JTCA_FILTER_CREATED_BY_DESC"
			onchange="this.form.submit();"
			query="SELECT `u`.`id` AS `value`, `u`.`name` AS `text`
			        FROM `#__users` AS `u`
			        INNER JOIN `jt_ljjadng12s` AS `a` ON `a`.`created_by` = `u`.`id`
			        GROUP BY `u`.`id`, `u`.`name`
			        ORDER BY `u`.`name`"
			key_field="value"
			value_field="text"			        			
		>
            <option value="">COM_JTCA_SELECT_CREATED_BY</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default=""
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
            <option value="a.billete ASC">COM_JTCA_LJJADNG12S_FIELD_BILLETE_SORT_ASC_LABEL</option>
            <option value="a.billete DESC">COM_JTCA_LJJADNG12S_FIELD_BILLETE_SORT_DESC_LABEL</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
            <option value="created_by_name ASC">COM_JTCA_FIELD_CREATED_BY_SORT_ASC_LABEL</option>
            <option value="created_by_name DESC">COM_JTCA_FIELD_CREATED_BY_SORT_DESC_LABEL</option>
			<option value="a.created ASC">JDATE_ASC</option>
			<option value="a.created DESC">JDATE_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>
        <field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_JTCA_LIST_LIMIT_LABEL"
			description="COM_JTCA_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
