<form
    addfieldpath="/administrator/components/com_jtca/models/fields"
    addrulepath="/administrator/components/com_jtca/models/rules"

>
    <fieldset
        name="basic_details"
    >
        <field
		    name="id"
		    type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
            default="0"
		/>
        <field
            name="version_note"
            type="text"
            label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="span12"
			size="45"
		/>
        <field
		    name="state"
    		type="list"
			label="JSTATUS"
			description="COM_JTCA_LJC16S_FIELD_STATUS_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
		>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field
            name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />

        <field
            name="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			type="jtcaordering"
			table="jt_ljc16s"
		/>
    </fieldset>
    <fieldset
        name="fieldset_ljc16_fs"
        label="COM_JTCA_LJC16S_FIELDSET_LJC16_FS_LABEL"
        description="COM_JTCA_LJC16S_FIELDSET_LJC16_FS_DESC"
    >
        <field
            name="id_expediente"
            type="modal_expedientes"
            label="COM_JTCA_LJC16S_FIELD_ID_EXPEDIENTE_LABEL"
            description="COM_JTCA_LJC16S_FIELD_ID_EXPEDIENTE_DESC"
            class="modal"
			required="true"
			default="0"
        >
        </field>  
        <field
            name="id_organo"
            type="sql"
            label="COM_JTCA_LJC16S_FIELD_ID_ORGANO_LABEL"
            description="COM_JTCA_LJC16S_FIELD_ID_ORGANO_DESC"
            class="inputbox"
			size="1"
			query="SELECT id, organo FROM jtc_organos"
			key_field="id"
			value_field="organo"
        >
            <option value="">COM_JTCA_LJC16S_SELECT_ID_ORGANO</option>
        </field>  
        <field
            name="id_secretaria"
            type="sql"
            label="COM_JTCA_LJC16S_FIELD_ID_SECRETARIA_LABEL"
            description="COM_JTCA_LJC16S_FIELD_ID_SECRETARIA_DESC"
            class="inputbox"
			size="1"
			query="SELECT id, secretaria FROM jtc_secretarias"
			key_field="id"
			value_field="secretaria"
        >
            <option value="">COM_JTCA_LJC16S_SELECT_ID_SECRETARIA</option>
        </field>  
        <field
            name="anoj"
            type="text"
            label="COM_JTCA_LJC16S_FIELD_ANOJ_LABEL"
            description="COM_JTCA_LJC16S_FIELD_ANOJ_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            name="field5"
            type="calendar"
            label="COM_JTCA_LJC16S_FIELD_FIELD5_LABEL"
            description="COM_JTCA_LJC16S_FIELD_FIELD5_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            name="field6"
            type="text"
            label="COM_JTCA_LJC16S_FIELD_FIELD6_LABEL"
            description="COM_JTCA_LJC16S_FIELD_FIELD6_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            name="faudiencia"
            type="calendar"
            label="COM_JTCA_LJC16S_FIELD_FAUDIENCIA_LABEL"
            description="COM_JTCA_LJC16S_FIELD_FAUDIENCIA_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d %H:%M"
 singleheader="true" showtime="true" timeformat="24" todaybutton="true" weeknumbers="true" filltable="true" minyear="-5" maxyear="1" 			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            name="field7"
            type="editor"
            label="COM_JTCA_LJC16S_FIELD_FIELD7_LABEL"
            description="COM_JTCA_LJC16S_FIELD_FIELD7_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
        <field
            name="field8"
            type="editor"
            label="COM_JTCA_LJC16S_FIELD_FIELD8_LABEL"
            description="COM_JTCA_LJC16S_FIELD_FIELD8_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
    </fieldset>
    <fieldset
        name="publishing"
		label="COM_JTCA_FIELDSET_PUBLISHING_LABEL"
    >
        <field
            name="created_by"
            type="user"
			label="COM_JTCA_FIELD_CREATED_BY_LABEL"
			description="COM_JTCA_LJC16S_FIELD_CREATED_BY_DESC"
		/>
        <field
            name="created"
            type="calendar"
            label="COM_JTCA_FIELD_CREATED_LABEL"
			description="COM_JTCA_LJC16S_FIELD_CREATED_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
        <field
            name="modified"
            type="calendar"
			label="COM_JTCA_FIELD_MODIFIED_LABEL"
			description="COM_JTCA_LJC16S_FIELD_MODIFIED_DESC"
            class="readonly"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
        <field
            name="modified_by"
            type="user"
		    label="COM_JTCA_FIELD_MODIFIED_BY_LABEL"
		    class="readonly"
		    readonly="true"
		    filter="unset"
		/>
        <field
            name="version"
            type="text"
			label="COM_JTCA_FIELD_VERSION_LABEL"
            description="COM_JTCA_LJC16S_FIELD_VERSION_DESC"
			class="readonly"
			size="6"
			readonly="true"
			filter="unset"
		/>
    </fieldset>
</form>
