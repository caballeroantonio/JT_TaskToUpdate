<form
    addfieldpath="/components/com_jtca/models/fields"
    addrulepath="/components/com_jtca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_JTCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			label="JTOOLBAR_VERSIONS"
			data-typeAlias="com_jtca.lejemplo"
		/>

        <field
			id="created"
			name="created"
			type="calendar"
			label="COM_JTCA_FIELD_CREATED_LABEL"
			description="COM_JTCA_LEJEMPLOS_FIELD_CREATED_BY_DESC"
			class="inputbox"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"		
		/>
        <field
			id="created_by"
			name="created_by"
			type="user"
			label="COM_JTCA_FIELD_CREATED_BY_LABEL"
			description="COM_JTCA_LEJEMPLOS_FIELD_CREATED_BY_DESC"
		/>
        <field
            id="modified"
            name="modified"
            type="calendar"
			label="COM_JTCA_FIELD_MODIFIED_LABEL"
			description="COM_JTCA_LEJEMPLOS_FIELD_MODIFIED_DESC"
            class="readonly"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
        <field
            id="modified_by"
            name="modified_by"
            type="user"
		    label="COM_JTCA_FIELD_MODIFIED_BY_LABEL"
		    class="readonly"
		    readonly="true"
		    filter="unset"
		/>
        <field
            id="state"
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
            size="1"
            default="1"
	    >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field
			id="version_note"
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
		/>
    </fieldset>
    <fieldset
        name="fieldset_lejemplo_fs"
        label="COM_JTCA_LEJEMPLOS_FIELDSET_LEJEMPLO_FS_LABEL"
    >

        <field
            id="id_expediente"
            name="id_expediente"
            type="modal_expedientes"
            label="COM_JTCA_LEJEMPLOS_FIELD_ID_EXPEDIENTE_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_ID_EXPEDIENTE_DESC"
            class="modal"
			required="true"
			default="0"
        >
        </field>  
        <field
            id="id_organo"
            name="id_organo"
            type="sql"
            label="COM_JTCA_LEJEMPLOS_FIELD_ID_ORGANO_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_ID_ORGANO_DESC"
            class="inputbox"
			size="1"
			query="SELECT id, organo FROM jtc_organos"
			key_field="id"
			value_field="organo"
        >
            <option value="">COM_JTCA_LEJEMPLOS_SELECT_ID_ORGANO</option>
        </field>  
        <field
            id="id_secretaria"
            name="id_secretaria"
            type="sql"
            label="COM_JTCA_LEJEMPLOS_FIELD_ID_SECRETARIA_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_ID_SECRETARIA_DESC"
            class="inputbox"
			size="1"
			query="SELECT id, secretaria FROM jtc_secretarias"
			key_field="id"
			value_field="secretaria"
        >
            <option value="">COM_JTCA_LEJEMPLOS_SELECT_ID_SECRETARIA</option>
        </field>  
        <field
            id="anoj"
            name="anoj"
            type="text"
            label="COM_JTCA_LEJEMPLOS_FIELD_ANOJ_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_ANOJ_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="my_boolean"
            name="my_boolean"
            type="checkbox"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_BOOLEAN_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_BOOLEAN_DESC"
            class="inputbox"
			value="1"
        >
        </field>  
        <field
            id="my_int"
            name="my_int"
            type="integer"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_INT_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_INT_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            id="my_currency"
            name="my_currency"
            type="currency"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_CURRENCY_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_CURRENCY_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            id="my_date"
            name="my_date"
            type="calendar"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_DATE_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_DATE_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            id="my_datetime"
            name="my_datetime"
            type="calendar"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_DATETIME_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_DATETIME_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d %H:%M"
 singleheader="true" showtime="true" timeformat="24" todaybutton="true" weeknumbers="true" filltable="true" minyear="-5" maxyear="1" 			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            id="my_var45"
            name="my_var45"
            type="text"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_VAR45_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_VAR45_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="txt_expediente"
            name="txt_expediente"
            type="text"
            label="COM_JTCA_LEJEMPLOS_FIELD_TXT_EXPEDIENTE_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_TXT_EXPEDIENTE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="my_var255"
            name="my_var255"
            type="text"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_VAR255_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_VAR255_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="txt_my_suggest"
            name="txt_my_suggest"
            type="combo_suggest"
            label="COM_JTCA_LEJEMPLOS_FIELD_TXT_MY_SUGGEST_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_TXT_MY_SUGGEST_DESC"
        >
        </field>  
        <field
            id="my_multiline"
            name="my_multiline"
            type="editor"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_MULTILINE_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_MULTILINE_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
        <field
            id="my_ref2"
            name="my_ref2"
            type="combo_sql"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_REF2_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_REF2_DESC"
        >
        </field>  
        <field
            id="my_ref"
            name="my_ref"
            type="combo_sql"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_REF_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_REF_DESC"
        >
        </field>  
        <field
            id="id_my_suggest"
            name="id_my_suggest"
            type="combo_suggest"
            label="COM_JTCA_LEJEMPLOS_FIELD_ID_MY_SUGGEST_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_ID_MY_SUGGEST_DESC"
        >
        </field>  
        <field
            id="my_NFempleado"
            name="my_NFempleado"
            type="modal_firmaempleado"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_NFEMPLEADO_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_NFEMPLEADO_DESC"
            class="inputbox"
			default="0"
        >
        </field>  
        <field
            id="my_fexterna"
            name="my_fexterna"
            type="modal_firma"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_FEXTERNA_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_FEXTERNA_DESC"
            class="modal validate-numeric"
			default="0"
        >
        </field>  
        <field
            id="my_hexterna"
            name="my_hexterna"
            type="modal_huella"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_HEXTERNA_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_HEXTERNA_DESC"
            class="modal validate-numeric"
			default="0"
        >
        </field>  
        <field
            id="my_parent"
            name="my_parent"
            type="modal_lejemplos"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_PARENT_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_PARENT_DESC"
            class="modal"
			default="0"
        >
        </field>  
        <field
            id="my_person_isMoral"
            name="my_person_isMoral"
            type="person"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_PERSON_ISMORAL_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_PERSON_ISMORAL_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="my_person_paterno"
            name="my_person_paterno"
            type="person"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_PERSON_PATERNO_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_PERSON_PATERNO_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="my_person_materno"
            name="my_person_materno"
            type="person"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_PERSON_MATERNO_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_PERSON_MATERNO_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="my_person_nombre"
            name="my_person_nombre"
            type="person"
            label="COM_JTCA_LEJEMPLOS_FIELD_MY_PERSON_NOMBRE_LABEL"
            description="COM_JTCA_LEJEMPLOS_FIELD_MY_PERSON_NOMBRE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
    </fieldset>
</form>
