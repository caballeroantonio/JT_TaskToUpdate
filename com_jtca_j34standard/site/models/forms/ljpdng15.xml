<form
    addfieldpath="/components/com_jtca/models/fields"
    addrulepath="/components/com_jtca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_JTCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			label="JTOOLBAR_VERSIONS"
			data-typeAlias="com_jtca.ljpdng15"
		/>

        <field
			id="created"
			name="created"
			type="calendar"
			label="COM_JTCA_FIELD_CREATED_LABEL"
			description="COM_JTCA_LJPDNG15S_FIELD_CREATED_BY_DESC"
			class="inputbox"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"		
		/>
        <field
			id="created_by"
			name="created_by"
			type="user"
			label="COM_JTCA_FIELD_CREATED_BY_LABEL"
			description="COM_JTCA_LJPDNG15S_FIELD_CREATED_BY_DESC"
		/>
        <field
            id="modified"
            name="modified"
            type="calendar"
			label="COM_JTCA_FIELD_MODIFIED_LABEL"
			description="COM_JTCA_LJPDNG15S_FIELD_MODIFIED_DESC"
            class="readonly"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
        <field
            id="modified_by"
            name="modified_by"
            type="user"
		    label="COM_JTCA_FIELD_MODIFIED_BY_LABEL"
		    class="readonly"
		    readonly="true"
		    filter="unset"
		/>
        <field
            id="state"
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
            size="1"
            default="1"
	    >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field
			id="version_note"
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
		/>
    </fieldset>
    <fieldset
        name="fieldset_ljpdng15_fs"
        label="COM_JTCA_LJPDNG15S_FIELDSET_LJPDNG15_FS_LABEL"
    >

        <field
            id="id_organo"
            name="id_organo"
            type="sql"
            label="COM_JTCA_LJPDNG15S_FIELD_ID_ORGANO_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_ID_ORGANO_DESC"
            class="inputbox"
			size="1"
			query="SELECT id, organo FROM jtc_organos"
			key_field="id"
			value_field="organo"
        >
            <option value="">COM_JTCA_LJPDNG15S_SELECT_ID_ORGANO</option>
        </field>  
        <field
            id="anoj"
            name="anoj"
            type="text"
            label="COM_JTCA_LJPDNG15S_FIELD_ANOJ_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_ANOJ_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="id_expediente"
            name="id_expediente"
            type="modal_expedientes"
            label="COM_JTCA_LJPDNG15S_FIELD_ID_EXPEDIENTE_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_ID_EXPEDIENTE_DESC"
            class="modal"
			required="true"
			default="0"
        >
        </field>  
        <field
            id="id_secretaria"
            name="id_secretaria"
            type="sql"
            label="COM_JTCA_LJPDNG15S_FIELD_ID_SECRETARIA_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_ID_SECRETARIA_DESC"
            class="inputbox"
			size="1"
			query="SELECT id, secretaria FROM jtc_secretarias"
			key_field="id"
			value_field="secretaria"
        >
            <option value="">COM_JTCA_LJPDNG15S_SELECT_ID_SECRETARIA</option>
        </field>  
        <field
            id="field3"
            name="field3"
            type="text"
            label="COM_JTCA_LJPDNG15S_FIELD_FIELD3_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_FIELD3_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="field4"
            name="field4"
            type="calendar"
            label="COM_JTCA_LJPDNG15S_FIELD_FIELD4_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_FIELD4_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d %H:%M"
 singleheader="true" showtime="true" timeformat="24" todaybutton="true" weeknumbers="true" filltable="true" minyear="-5" maxyear="1" 			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            id="field5"
            name="field5"
            type="text"
            label="COM_JTCA_LJPDNG15S_FIELD_FIELD5_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_FIELD5_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="field6"
            name="field6"
            type="text"
            label="COM_JTCA_LJPDNG15S_FIELD_FIELD6_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_FIELD6_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="field7"
            name="field7"
            type="calendar"
            label="COM_JTCA_LJPDNG15S_FIELD_FIELD7_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_FIELD7_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            id="field8"
            name="field8"
            type="editor"
            label="COM_JTCA_LJPDNG15S_FIELD_FIELD8_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_FIELD8_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
        <field
            id="exp_extinto"
            name="exp_extinto"
            type="text"
            label="COM_JTCA_LJPDNG15S_FIELD_EXP_EXTINTO_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_EXP_EXTINTO_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="jorigen"
            name="jorigen"
            type="combo_sql"
            label="COM_JTCA_LJPDNG15S_FIELD_JORIGEN_LABEL"
            description="COM_JTCA_LJPDNG15S_FIELD_JORIGEN_DESC"
        >
        </field>  
    </fieldset>
</form>
